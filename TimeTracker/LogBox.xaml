<UserControl x:Class="TimeTracker.LogBox"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:TimeTracker"
             mc:Ignorable="d" 
             d:DesignHeight="28" d:DesignWidth="127">
    <Border Background="#007acc" BorderThickness="0" CornerRadius="3,3,0,0">
        <Border.Effect>
            <DropShadowEffect BlurRadius="40" Direction="90" ShadowDepth="0"></DropShadowEffect>
        </Border.Effect>
        <Canvas>
            <TextBlock x:Name="el_Id" Foreground="White" FontSize="10" FontWeight="Bold" Canvas.Left="4" Canvas.Top="-1" />
            <TextBlock x:Name="el_From" Foreground="White" FontSize="10" Canvas.Left="91" Canvas.Top="-1" />
            <TextBlock x:Name="el_Comment" Foreground="#99ccff" FontSize="10" Canvas.Left="4" Canvas.Top="12" />
        </Canvas>
    </Border>
</UserControl>
