<UserControl x:Class="TimeTracker.ClockNew"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:TimeTracker"
             mc:Ignorable="d" 
             d:DesignHeight="17" Width="33">
    <Grid Margin="0,0,0,0" Width="33">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="2"/>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition Height="17" />
        </Grid.RowDefinitions>
        <Path Fill="White" StrokeThickness="0" Height="17" Width="2" Stretch="Fill">
            <Path.Data>
                <RectangleGeometry Rect="2,27,2,27" />
            </Path.Data>
        </Path>
        <TextBlock x:Name="TimeText" Foreground="White" Grid.Column="1" Text="12:25" Margin="0,0,0,0" Width="48" />
    </Grid>
</UserControl>
